<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300px"
    android:background = "#f9f9f9"
    android:orientation="horizontal">

    <RelativeLayout android:layout_height="125px"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_margin="5px"
        android:id = "@+id/tweet_header">
        <ImageView
            android:layout_width="115px"
            android:layout_height="115px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin = "3px"
            android:id = "@+id/tweet_image"
            android:layout_alignParentTop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:id = "@+id/tweet_handle"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tweet_image"
            android:text = "Tweeter"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="175px"
        android:id = "@+id/tweet_view_content"
        android:text = "Tweet Body"
        android:layout_marginLeft="8px"
        android:layout_marginRight="8px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
